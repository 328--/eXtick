!!! 5
%html
  %head
    %title eXtick
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    %link(href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet")

  %body
    %div.navbar.navbar-fixed-top.navbar-inverse(role="navigation")
      .navbar-inner
        .container-fluid
          .navbar-header
            %a.navbar-brand(href="/") eXtick
          %ul.nav.navbar-nav.navbar-right
            - if session[:name]
              %li.dropdown
                %a.dropdown-toggle(data-toggle="dropdown" href="#")
                  #{session[:name]}
                  .caret
                %ul.dropdown-menu
                  %li
                    = link_to(t("register_new_ticket"), controller: "tickets", action: "new")
                  %li
                    = link_to(t("watch_tag"), controller: "user", action: "watch_tag")
                  %li
                    = link_to(t("registered_ticket"), controller: "user", action: "myticket")
                  %li
                    = link_to(t("logout"), controller: "session", action: "destroy")
            - else
              %li.dropdown
                %a.dropdown-toggle(data-toggle="dropdown" href="#")
                  = t("login")
                  .caret
                %ul.dropdown-menu
                  %li
                    = link_to("Twitter", "/auth/twitter")
  = yield
