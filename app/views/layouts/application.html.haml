!!! 5
%html
  %head
    %title eXtick
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    = favicon_link_tag
    %link(href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet")

  %body
    .bounceInRight.animated
      .nav.blue
        %ul
          %li
            .border-right
              %button(onclick="location.href='/'")
                .i.icon-home
                  eXtick
          .fixed.right
            - if session[:name]
              %li
                .border-left
                  = link_to(t("register_new_ticket"), controller: "tickets", action: "new")
              %li
                .border-left
                  = link_to(t("registered_ticket"), controller: "user", action: "myticket")
              %li
                .border-left
                  = link_to(t("watch_tag"), controller: "user", action: "watch_tag")
              %li
                .border-left
                  %a.i.icon-twitter(href="https://twitter.com/eXtick_")
                    = t("inquiry")
              %li
                .border-left
                  = link_to(t("logout"), controller: "session", action: "destroy")
            - else
              %li
                .border-left
                  = link_to(t("login"), "/auth/twitter")
          
  = yield
  
  .bounceInRight.animated
    %footer.nav.blue
      .container-fluid(role="contentinfo" align="center")
        %p
          ご意見ご要望はこちらまで
          %a.i.icon-twitter(href="https://twitter.com/eXtick_")
            @eXtick_
        %p
          %i.fa.fa-copyright
            2014 irohash
