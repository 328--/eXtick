.container
  %h1= t('search_ticket')
  .form-horizontal.well
    %ul.nav.nav-tabs
      %li.active
        %a(href="#keyword" data-toggle="tab")
          Keyword
      %li
        %a(href="#tag" data-toggle="tab")
          Tag
    %div.tab-content
      %div.tab-pane.active(id="keyword")
        = render(partial: "search_form", locals: {tab_id: "keyword"})
      %div.tab-pane(id="tag")
        = render(partial: "search_form", locals: {tab_id: "tag"})
