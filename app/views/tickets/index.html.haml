-if notice
  .alert.alert-success
    %a(class="close"  data-dismiss="alert") x
    = notice

.row
  .ten.twelfth.skip-one
    - if session[:name].nil?
      = render(partial: "oauth")

.row
  .seven.twelfth.skip-one
    = render(partial: "search_form")
  .two.twelfths.skip-one
    = render(partial: "tag_cloud", locals: {title: t('tag_cloud')})

.row
  .ten.twelfths.skip-one
    #ajax_area
      = render(partial: "listing_tickets", locals: {tickets: @tickets, title: t('new_tickets')})

.row
  .ten.twelfths.skip-one
    #tweetbot_area
      = render(partial: "listing_tickets_bot", locals: {tickets: @tickets_bot, title: t('ticket_bot_index')})
